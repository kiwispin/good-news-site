{% extends "base.njk" %}
{% block content %}
  <h2 class="text-2xl font-bold mb-4">Good News in {{ category }}</h2>
  <div class="space-y-6">
    {% for post in collections.all | reverse if post.data.category == category %}
      {% include "article-card.njk" %}
    {% endfor %}
  </div>
{% endblock %}
